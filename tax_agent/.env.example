# ==============================================================================
# Tax Agent Backend — Environment Variables
# ==============================================================================
# IMPORTANT: This file must be at backend/tax_agent/.env
# config.py calls load_dotenv() from CWD, so the server must be started
# from backend/tax_agent/ for these values to load.
#
# Copy this file: cp .env.example .env
# Then fill in your actual values.
# ==============================================================================

# MongoDB
MONGODB_URI=mongodb+srv://...
DATABASE_NAME=georgian_tax_db

# Google AI
GEMINI_API_KEY=your-key
EMBEDDING_MODEL=gemini-embedding-001
GEMINI_GENERATION_MODEL=gemini-3-flash-preview

# Authentication
API_KEY_SECRET=your-secret

# Tax Agent Settings
SIMILARITY_THRESHOLD=0.5
MATSNE_REQUEST_DELAY=2.0
SEARCH_LIMIT=5
KEYWORD_SEARCH_ENABLED=true
RATE_LIMIT=30
QUERY_REWRITE_MODEL=gemini-3-flash-preview
QUERY_REWRITE_TIMEOUT=3.0

# Feature Flags (Orchestrator) — all default to false
ROUTER_ENABLED=true
LOGIC_RULES_ENABLED=true
CRITIC_ENABLED=false
CRITIC_CONFIDENCE_THRESHOLD=0.7

# Safety & Truncation Defense
SAFETY_RETRY_ENABLED=true
SAFETY_FALLBACK_MODEL=gemini-2.5-flash

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3010

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false
